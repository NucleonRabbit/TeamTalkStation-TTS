<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:TeamTalkStation_TTS_Client"
             xmlns:MaterialThemes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             x:Class="TeamTalkStation_TTS_Client.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    
	<Application.Resources>
        <MaterialThemes:BundledTheme BaseTheme="Dark"  PrimaryColor="Indigo" SecondaryColor="Cyan"/>
    </Application.Resources>
	
	
    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml"/>
        <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml"/>
        <!-- <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/> -->
        <!-- <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/> -->
        <!-- <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" /> -->
    </Application.Styles>
</Application>
