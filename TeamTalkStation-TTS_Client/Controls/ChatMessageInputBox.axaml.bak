<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:M_Icons="using:Material.Icons.Avalonia"
        xmlns:controls="using:TeamTalkStation_TTS_Client.Controls">
    
    
    <Design.PreviewWith>
        
        <Grid ColumnDefinitions="*, Auto, Auto" Margin="20" >
        <Border Grid.Column="0"
              MinWidth="350"
              Background="{DynamicResource EntryBackground}"
              CornerRadius="5,0,0,5"
              Padding="5">

          <Grid ColumnDefinitions="Auto, *">

            <Button Grid.Column="0"
                    Classes="IconButton"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Center"
                    BorderThickness="0">
              
                    <Button.Content>
                        <M_Icons:MaterialIcon Kind="Microphone"/>
                    </Button.Content>
            </Button>

            <TextBox TextWrapping="Wrap"
                     Grid.Column="1"
                     Classes="ChatMessageInputBox"
                     Text="{Binding NewMessageContent}"
                     VerticalContentAlignment="Center"
                     Watermark="Type something..."/>            
          </Grid>

         

        </Border>

        <Border Grid.Column="1"               
                Background="{DynamicResource EntryBackground}"
                Margin="2,0,0,0"
                Padding="5">

          <Button Grid.Column="0"
                  Classes="IconButton"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  VerticalAlignment="Center"
                  BorderThickness="0">

                      <Button.Content>
                          <M_Icons:MaterialIcon Kind="ImageAdd"/>
                      </Button.Content>
                    </Button>
          
        </Border>


        <Border Grid.Column="2"
        Background="{DynamicResource EntryBackground}"
        Margin="2,0,0,0"
                CornerRadius="0,5,5,0"
        Padding="5">

          <Button Grid.Column="0"
                  Classes="IconButton"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  VerticalAlignment="Center"
                  BorderThickness="0">

            <Button.Content>
                <M_Icons:MaterialIcon Kind="Send"/>
            </Button.Content>
          </Button>

        </Border>
       
      </Grid>


    </Design.PreviewWith>

    <Style Selector="Button.IconButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="Button.IconButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
  
  
  
  
    <Style Selector="TextBox.ChatMessageInputBox">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="Transparent"/>    
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBox.ChatMessageInputBox:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Background" Value="Gray" />
    </Style>

    <Style Selector="TextBox.ChatMessageInputBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0" />
    </Style>

</Styles>
